FROM golang:1.9-alpine AS builder
WORKDIR /go/src/github.com/edgexfoundry/edgex-go
COPY . .
RUN cd cmd/export-distro && CGO_ENABLED=0 GOOS=linux go build -ldflags "-s" -a -installsuffix cgo -o exe

FROM scratch
COPY --from=builder /go/src/github.com/edgexfoundry/edgex-go/cmd/export-distro/exe /
ENTRYPOINT ["/exe"]
